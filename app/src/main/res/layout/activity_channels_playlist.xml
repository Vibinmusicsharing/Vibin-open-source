<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sliding_main"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    app:umanoPanelHeight="@dimen/_400sdp"
    app:umanoClipPanel="true"
    app:umanoParallaxOffset="10dp"
    app:umanoScrollableView="@+id/dragview"
    app:umanoDragView="@+id/dragview"
    app:umanoOverlay="true"
    app:umanoShadowHeight="@dimen/_20sdp"

    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">


        <ImageView
            android:id="@+id/channel_image"
            android:layout_width="300dp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:src="@drawable/musicplayericon"
            android:visibility="visible"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/rl_channel_name"
            android:layout_width="300dp"
            android:layout_height="@dimen/_90sdp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_channel_name"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Name"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"/>




            <TextView
                android:id="@+id/tv_channel_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_channel_name"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="#f2f2f2"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="invisible"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_release_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:textColor="#e6e6e6"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:visibility="invisible"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                style="@style/TextAppearance.AppCompat.Small.Inverse"
                android:backgroundTint="#ff0000"
                android:layout_gravity="center"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|bottom"
        android:id="@+id/dragview"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical"
        android:background="@drawable/drawable_top_rounded_black_bg">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channel_playlist_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp" />

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>