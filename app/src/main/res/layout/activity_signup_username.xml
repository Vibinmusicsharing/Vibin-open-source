<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6dp"
                android:text="@string/signup_second_screen_title"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="-12dp"
                android:layout_below="@+id/textView2"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_horizontal"
                android:text="@string/signup_whose_this"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">


        <EditText
            android:id="@+id/tv_username"
            android:layout_width="310dp"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm0123456789-_."
            android:hint="@string/hint_username"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="10dp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/appHintClr" />


    <EditText
        android:id="@+id/cust_full_name"
        android:layout_width="310dp"
        android:layout_height="58dp"
        android:layout_below="@+id/tv_username"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/appHintClr"
        android:hint="Enter full Name"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true"
        android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm " />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        >

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_btn_rounded_purple"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:paddingStart="@dimen/dimen_50dp"
        android:paddingEnd="@dimen/dimen_50dp"
        android:textSize="18sp"
        android:visibility="visible"
        android:fontFamily="@font/tinos_regular"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center" />

    </LinearLayout>
</RelativeLayout>