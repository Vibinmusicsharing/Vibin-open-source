<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.shorincity.vibin.music_sharing.UI.custom.RoundedImageView
            android:id="@+id/user_dp_iv"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/thumb_off"
            app:riv_corner_radius="@dimen/_35sdp"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/textViewtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Abcdefgh"
            android:textColor="@android:color/black"
            android:textSize="12dp" />



        <CheckBox
            android:id="@+id/checkbox_collabs"
            style="@style/CustomCheckbox02"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_height="wrap_content"></CheckBox>

    </LinearLayout>


</RelativeLayout>