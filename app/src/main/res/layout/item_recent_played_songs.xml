<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPlaylist"
                android:layout_width="120dp"
                android:layout_height="120dp" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/ivPlaylistBg"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_cornerradius_playlist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlaylistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/font_extra_bold"
            android:singleLine="true"
            android:text="Pain"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/ivPlaylistBg"
            app:layout_constraintStart_toStartOf="@id/ivPlaylistBg"
            app:layout_constraintTop_toBottomOf="@id/ivPlaylistBg" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlaylistCreator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/font_medium"
            android:singleLine="true"
            android:text="by encode"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/ivPlaylistBg"
            app:layout_constraintStart_toStartOf="@id/ivPlaylistBg"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>