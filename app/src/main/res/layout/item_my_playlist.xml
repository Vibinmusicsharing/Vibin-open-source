<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_10sdp">


        <com.giphy.sdk.ui.views.GifView
            android:id="@+id/gif_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_more"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="20dp"
                android:tint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/more"></ImageView>
            <RelativeLayout
                android:id="@+id/admin_detail_hldr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/user_dp_hldr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gph_transparent"
                    app:cardCornerRadius="@dimen/_18sdp">

                    <ImageView
                        android:id="@+id/user_dp_iv"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_img"
                        android:background="@color/gph_transparent"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignTop="@+id/user_dp_hldr"
                    android:layout_alignBottom="@+id/user_dp_hldr"
                    android:layout_toRightOf="@+id/user_dp_hldr"
                    android:layout_toLeftOf="@+id/add_img"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/item_admin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_detail_hldr"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/nav_white"
                        android:textAllCaps="true"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textSize="@dimen/_8sdp"
                        android:background="@color/black_overlay"
                        android:text="hjhcj"/>

                    <TextView
                        android:id="@+id/item_user_subname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/admin_detail_hldr"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/nav_white"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textSize="@dimen/_9sdp"
                        android:background="@color/black_overlay"
                        android:visibility="gone"/>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_img"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@color/gph_transparent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="@dimen/_15sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@android:drawable/ic_input_add"
                        android:background="@color/nav_white"
                        android:tint="@color/black"
                        android:layout_gravity="center"
                        />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_detail_hldr"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/nav_white"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:background="@color/black_overlay"
                android:singleLine="true"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_below="@+id/item_title"
                android:layout_centerHorizontal="true"
                android:background="@color/black_overlay"
                android:paddingTop="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/light_gray"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="@dimen/_8sdp" />

           <!-- <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_below="@+id/item_duration"
                android:layout_centerHorizontal="true"
                android:background="@color/black_overlay"
                android:text="hbwehjbhj"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/nav_white"
                android:textAllCaps="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"/>-->


            <ImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/item_desc"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_icons8_music"
                android:scaleType="centerCrop"
                android:visibility="invisible"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_img"
                android:background="@drawable/black_overlay_gradient">

                <ImageView
                    android:id="@+id/pause_gif_btn"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/play_btn"
                    app:srcCompat="@drawable/stop"
                    android:tint="@color/light_gray"/>

                <Button
                    android:id="@+id/play_btn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_play_circle_filled_black_24dp"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:backgroundTint="@color/white"/>

                <!--<ImageView
                    android:id="@+id/volumn_icon"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_toLeftOf="@+id/like_btn"
                    app:srcCompat="@drawable/ic_share_black_24dp" />-->

                <ImageView
                    android:id="@+id/like_btn"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/play_btn"
                    app:srcCompat="@drawable/playlist_thumb"
                    android:tint="@color/light_gray"/>

                <TextView
                    android:id="@+id/like_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/like_btn"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/nav_white"
                    android:textStyle="bold"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>