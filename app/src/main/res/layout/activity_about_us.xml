<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".activity.AboutUsActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:id="@+id/txt_about"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <com.shorincity.vibin.music_sharing.UI.custom.RoundedImageView
        android:layout_centerVertical="true"
        android:id="@+id/dp_iv"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:riv_mutate_background="true"
        app:riv_corner_radius="@dimen/_35sdp"
        android:src="@drawable/app_logo_notify"
        />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/txt_title"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIBIN"
        android:layout_below="@+id/dp_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textStyle="bold"
        android:textSize="@dimen/_26sdp"/>

    <TextView
        android:text="version"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_title"
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_version"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_facebook"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_13sdp"
            android:scaleType="fitXY"
            android:src="@drawable/facebook"
             />

        <ImageView
            android:layout_margin="@dimen/_13sdp"
            android:id="@+id/img_twitter"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"

            android:src="@drawable/twitter"
            />
        <ImageView
            android:layout_margin="@dimen/_13sdp"
            android:id="@+id/img_instagram"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"

            android:src="@drawable/instagram"
            />

        <ImageView
            android:layout_margin="@dimen/_13sdp"
            android:id="@+id/img_linkedin"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"

            android:src="@drawable/linkedin"
            />

    </LinearLayout>


</RelativeLayout>