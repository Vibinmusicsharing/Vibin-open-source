<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    tools:context=".music_sharing.activity.AdditionalSignUpActivity"
    android:background="@color/nav_black" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:id="@+id/tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additional_screen_title"
            android:textColor="@color/nav_white"
            android:textSize="@dimen/_15sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp">


            <TextView
                android:id="@+id/tv_dob_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dob"
                android:textColor="@color/nav_white"
                android:textSize="@dimen/_17sdp"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:id="@+id/rl_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_ui"
                android:layout_toRightOf="@+id/tv_dob_head"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center">

                <EditText
                    android:id="@+id/edt_dob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_toLeftOf="@+id/iv_cal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:editable="false"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/nav_white"
                    android:textSize="@dimen/_15sdp"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/iv_cal"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/calendar"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/you_are"
            android:textColor="@color/nav_white"
            android:textSize="@dimen/_17sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_user_male"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:background="@drawable/btn_selector"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/user_male"/>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_user_female"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:background="@drawable/btn_selector"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/user_female"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp">

            <TextView
                android:id="@+id/tv_pref_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pref_platform"
                android:textColor="@color/nav_white"
                android:textSize="@dimen/_17sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_below="@+id/tv_pref_platform">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/youtube_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_youtube_btn"
                    android:text="Youtube"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password_login" />
                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/spotify_btn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_spotify_btn"
                    android:text="Spotify"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/password_login" />
            </LinearLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/bgbtn"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>