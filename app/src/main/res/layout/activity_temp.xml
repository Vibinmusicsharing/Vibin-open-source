<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <com.oze.music.musicbar.ScrollableMusicBar
        android:id="@+id/ScrollableMusicBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:padding="8dp"
        app:divided="true"
        app:dividerSize="10"
        app:barWidth="3"
        app:spaceBetweenBar="2"
        app:backgroundBarPrimeColor="#dfd6d6"
        app:backgroundBarSecondaryColor="#c4bbbb"
        app:LoadedBarPrimeColor="#fb4c01"
        app:LoadedBarSecondaryColor="#eca277"
        android:visibility="gone"/>

    <com.oze.music.musicbar.MusicBar
        android:id="@+id/MusicBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_below="@+id/ScrollableMusicBar"
        android:padding="8dp"
        app:divided="true"
        app:dividerSize="10"
        app:barWidth="3"
        app:spaceBetweenBar="2"
        app:backgroundBarPrimeColor="#dfd6d6"
        app:backgroundBarSecondaryColor="#c4bbbb"
        app:LoadedBarPrimeColor="#fb4c01"
        app:LoadedBarSecondaryColor="#eca277"
        android:visibility="gone"/>

    <com.oze.music.musicbar.FixedMusicBar
        android:id="@+id/FixedMusicBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_below="@+id/MusicBar"
        android:padding="8dp"
        app:divided="true"
        app:dividerSize="10"
        app:barWidth="3"
        app:spaceBetweenBar="2"
        app:backgroundBarPrimeColor="#dfd6d6"
        app:backgroundBarSecondaryColor="#c4bbbb"
        app:LoadedBarPrimeColor="#fb4c01"
        app:LoadedBarSecondaryColor="#eca277"
        android:visibility="gone" />

</RelativeLayout>